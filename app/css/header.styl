/*
*
* Header Styles
*
*/
@import mixins

header
    background rgba(255, 255, 255, 0.5)
    height $headerHeight
    z-index 10
    position fixed
    top 0
    left 0
    right 0

    div
        alignment()

    span
        display none
        float right
        margin-top 9px
        font-size 40px
        color $white
        cursor pointer

    p
        float left

        a
            display inline-block
            padding 14px 25px 11px 67px
            margin 10px 0
            font-size 16px
            color $white
            border 2px solid $white
            border-radius 60px
            position relative

            &:before
                content "\e639"
                font-family Helium
                color $white
                font-size 40px
                position absolute
                top 2px
                left 17px
                transform rotate(0deg)
                transition all ease .5s

            &:hover:before
                transform rotate(360deg)
                transition all ease .5s

    ul
        float right
        margin-top 25px

        li
            float left
            margin-left 8px

            a
                font-size 15px
                color $white

/* Documents Header */
.xhtml
.css
.html5
    header
        background $smokedColor
        
        p
            a
                background $softGray
                color $smokedColor
                border 2px solid $dirtyWhite
                
                &:hover
                    color $dirtyWhite
                    background $green
                    
                &:before
                    color $smokedColor
                    
                &:hover:before
                    color $dirtyWhite

        ul li a
            color dirtyWhite

/* Responsive */
@media only screen and (max-width: 768px)
    header
        p a
            color transparent
            padding 0
            margin-top 13px
            width 40px
            border none

            &:before
                left 0

        span
            display block

        ul
            display none

        .header-menu-open
            position relative

            ul
                display block
                background linear-gradient($blue, $softGreen)
                float inherit
                margin 0
                padding 5px 0
                border 2px solid $white
                borderRadius()
                position absolute
                top 55px
                right 5px

                li
                    float inherit
                    margin 0
                    padding 5px 25px
                    text-align center

    /* Documents Header */
    .xhtml
    .css
    .html5
        header
            p a
                background inherit
                color $smokedColor
                border none

                &:hover
                    color $smokedColor
                    background inherit

                &:before
                &:hover:before
                    color $dirtyWhite

            span
                color $dirtyWhite

        .header-menu-open
            ul
                background $smokedColor
                border-color $dirtyWhite

                a
                    color $dirtyWhite
